{
  "name": "ai-assistant-tests",
  "version": "1.0.0",
  "description": "HarmonyOS AI Assistant 自动化测试套件",
  "scripts": {
    "test": "node tests/run-tests.js",
    "test:local": "node tests/run-tests.js LocalChartService",
    "test:factory": "node tests/run-tests.js ChartConfigFactory",
    "test:watch": "node tests/watch-tests.js",
    "test:coverage": "node tests/coverage.js",
    "test:report": "node tests/generate-report.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "entry/src/main/ets/**/*.{ts,ets}",
      "!entry/src/main/ets/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}