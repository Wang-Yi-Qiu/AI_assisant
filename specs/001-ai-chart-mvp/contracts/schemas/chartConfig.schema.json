{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/chartConfig.schema.json",
  "title": "EChartsConfig",
  "type": "object",
  "properties": {
    "title": {
      "type": "object",
      "properties": {
        "text": { "type": "string" }
      },
      "required": ["text"]
    },
    "series": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" }
        },
        "required": ["type"]
      },
      "minItems": 1
    }
  },
  "required": ["series"]
}
